# AI Stack Template Environment Configuration
# Copy this file to .env and customize the values

# ===================
# N8N CONFIGURATION
# ===================
N8N_BASIC_AUTH_ACTIVE=false
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678

# For production, enable authentication:
# N8N_BASIC_AUTH_ACTIVE=true
# N8N_BASIC_AUTH_USER=admin
# N8N_BASIC_AUTH_PASSWORD=your-secure-password
# N8N_JWT_SECRET=your-jwt-secret

# Enterprise license (optional)
# N8N_LICENSE_ACTIVATION_KEY=your-license-key

# ===================
# DATABASE CONFIGURATION
# ===================
# n8n Database
POSTGRES_DB=n8n
POSTGRES_USER=n8n
POSTGRES_PASSWORD=n8n_password

# Application Database  
DATABASE_URL=postgresql://backend_user:backend_password@postgres_backend:5432/ai_app
POSTGRES_BACKEND_DB=ai_app
POSTGRES_BACKEND_USER=backend_user
POSTGRES_BACKEND_PASSWORD=backend_password

# ===================
# API CONFIGURATION
# ===================
REACT_APP_API_URL=http://localhost:3001
N8N_WEBHOOK_URL=http://n8n:5678/webhook

# Backend Configuration
NODE_ENV=development
PORT=3001

# ===================
# OLLAMA CONFIGURATION
# ===================
OLLAMA_HOST=0.0.0.0:11434
OLLAMA_API_BASE_URL=http://ollama:11434

# ===================
# EXTERNAL APIs (Optional)
# ===================
# Add your API keys here for external integrations

# OpenAI (if you want to use GPT models alongside local ones)
# OPENAI_API_KEY=your-openai-api-key

# Stock API (Alpha Vantage example)
# ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key

# ===================
# SECURITY SETTINGS
# ===================
JWT_SECRET=your-jwt-secret-change-in-production
CORS_ORIGIN=http://localhost:3000

# ===================
# MONITORING & LOGGING
# ===================
LOG_LEVEL=info
LOG_FORMAT=combined

# ===================
# PERFORMANCE TUNING
# ===================
DB_POOL_MIN=2
DB_POOL_MAX=10
REQUEST_LIMIT=100mb
REQUEST_TIMEOUT=30000